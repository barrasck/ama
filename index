            accesoJornadas: true,
            accessoTarifas: true,
            accessoSedes: true
        };
        usuarios.push(usuarioGerente);
        localStorage.setItem("usuarios", JSON.stringify(usuarios));
    }

    mostrarUsuarios();
});

